<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fafafc"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:id="@+id/layout_all_yiyuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_yy"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="全部医院"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#0f2536"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_arrow_yy"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_arrow_gray" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#e1e1e2"

            />

        <RelativeLayout
            android:id="@+id/layout_all_zhicheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_zc"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="全部职称"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="#0f2536"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_arrow_zc"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_arrow_gray" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#e1e1e2"

            />

        <RelativeLayout
            android:id="@+id/layout_all_manbing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_mb"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="全部慢病"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#0f2536"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_arrow_mb"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/icon_arrow_gray" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e2" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
