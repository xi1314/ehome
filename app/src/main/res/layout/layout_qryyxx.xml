<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/layout_wzyy"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_wzyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="问诊医院:"
                    android:layout_marginRight="4dp"
                    android:textColor="#0f2536"/>

                <TextView
                    android:id="@+id/tv_hosptial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_wzyy"
                    android:layout_marginLeft="8dp"
                    android:text="郑州大学第五附属医院"
                    android:textColor="#00c07d"
                    android:textSize="16sp" />

            </RelativeLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e1e1e2" />

            <RelativeLayout
                android:id="@+id/layout_yyks"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_yyks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"

                    android:text="预约科室:"
                    android:layout_marginRight="4dp"
                    android:textColor="#0f2536"/>

                <TextView
                    android:id="@+id/tv_ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_yyks"
                    android:text="消化内科"
                    android:textColor="#00c07d"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e1e1e2" />
            <RelativeLayout
                android:id="@+id/layout_yysj"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_yysj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="预约时间:"
                    android:layout_marginRight="4dp"
                    android:textColor="#0f2536"/>

                <TextView
                    android:id="@+id/tv_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_yysj"
                    android:layout_marginLeft="8dp"
                    android:text="2016-08-04 08:00-12:00"
                    android:textColor="#00c07d"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarHeight"
            android:background="@drawable/register_btn_bg"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:text="确定"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/button_size" />

    </LinearLayout>


</LinearLayout>


