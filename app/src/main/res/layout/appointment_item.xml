<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <com.zzu.ehome.view.CircleImageView
            android:id="@+id/ivhead"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/icon_doctor"
           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#0f2536"
            android:layout_marginTop="17dp"
            android:text="李刘霞" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="#0f2536"
            android:text="郑州大学第一附属医院 神经内科" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#e1e1e2" />

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预约时间：2016/8/22 星期一 15:00-18:00"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="#00C070" />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@mipmap/yjz"
       />
    </RelativeLayout>
</LinearLayout>
